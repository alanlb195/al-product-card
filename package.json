{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "url": "https://github.com/alanlb195/al-product-card",
    "type": "git"
  },
  "homepage": "https://www.alandev.site/es/portfolio",
  "engines": {
    "node": ">=20.x"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "test:watch": "tsdx test --watch"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "al-product-card",
  "author": "alanlb195",
  "module": "dist/al-product-card.esm.js",
  "size-limit": [
    {
      "path": "dist/al-product-card.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/al-product-card.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@rollup/plugin-image": "^3.0.3",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "husky": "^9.1.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^11.2.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "product",
    "card",
    "alandev"
  ],
  "dependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "babel-jest": "^30.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "identity-obj-proxy",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  }
}
